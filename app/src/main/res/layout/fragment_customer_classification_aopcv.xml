<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.aocpv.CustomerClassificationAocpvFragment">

    <TextView
        android:id="@+id/tvCustomerTitle"
        style="@style/Aocpv.HeaderTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/aocpv_customer_classification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvColorName"
        style="@style/Aocpv.SubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/amber"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/amber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCustomerTitle" />

    <TextView
        android:id="@+id/tvClassificationData"
        style="@style/Aocpv.Data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:lineSpacingExtra="8dp"
        android:text="House type = Kacha &amp; Rented\nAddress Non match\nRented + Stability  5 years"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvColorName" />
</androidx.constraintlayout.widget.ConstraintLayout>